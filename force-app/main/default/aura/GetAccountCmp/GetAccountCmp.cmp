<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global" controller="GetAccountClass" >
    <aura:attribute name="Acc" type="Account" />
    <aura:attribute name="acclist" type="Account[]"/>
    <aura:handler name="init" value="{!this}" action="{!c.handleInit}"/>
    <lightning:select name="select" label="Select Account">
        <option value="null">None
        </option>
    <aura:iteration items="{!v.acclist}" var="item">
    <option value="{!item.Id}">{!item.Name}</option>
    
    </aura:iteration>
        </lightning:select>
</aura:component>