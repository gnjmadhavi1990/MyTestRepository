<aura:component controller="GetContactClass" implements="flexipage:availableForRecordHome,force:hasRecordId" access="global" >
    <aura:attribute name="contact" type="Contact"/>
    <aura:attribute name="ConList" type="List"/>
    <aura:attribute name="recordId" type="string"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <lightning:select aura:id="select1" name="select1" label="select Contact" onchange="{!c.handlChange}">
        <option value="null">None</option>
        <aura:iteration items="{!v.ConList}" var="con">
            <option value="{!con.Id}">{!con.Name}</option>
      
        </aura:iteration>
    </lightning:select>

   Contact Id : {!v.recordId}
   
</aura:component>