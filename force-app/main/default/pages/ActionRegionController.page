    <apex:form >
        <apex:pageBlock id="pb">
            <apex:pageBlockSection columns="1">
            <apex:pageBlockSectionItem >
                <apex:outputPanel >
                    <apex:outputLabel value="Employee Number"/>
                </apex:outputPanel>
                <apex:outputPanel >
                <apex:actionregion >
                    <apex:inputText value="{!empNo}" />
                    <apex:commandButton value="search" action="{!getEmpDetails}" rerender="pb"/>
                    </apex:actionregion>
                </apex:outputPanel>
                
                </apex:pageBlockSectionItem>
                <apeX:inputText value="{!emp.dept__c}"/>
                <apex:inputText value="{!emp.Name}"/>
                <apex:inputText value="{!emp.phone_number__c}"/>
            </apex:pageBlockSection>
        
        
        </apex:pageBlock>
    </apex:form>
</apex:page>