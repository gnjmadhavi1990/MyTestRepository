<apex:page controller="RetrieveContactClass">
    <apex:form >
   <apex:pageBlock >
        <apex:pageBlockSection >
            <apex:pageBlockSectionItem >
               Select Account Name: <apex:selectList value="{!selectedAccount}" size="1">
                <apex:selectOptions value="{!accountNames}"/>
                <apex:actionSupport event="onchange" action="{!retrieveContact}" status="loadRecords" rerender="pb"></apex:actionSupport>
                </apex:selectList>
                
            </apex:pageBlockSectionItem>
        </apex:pageBlockSection>
        </apex:pageBlock>
        <apex:pageBlock title="Related Contacts" id="pb">
            <apex:actionStatus id="loadRecords">
            <apex:facet name="start">
                <apex:image value="{!$Resource.Loading}" style="width:231px;height:110px;"/>
                </apex:facet>
                <apex:facet name="stop">
                <apex:pageBlockTable value="{!contactList}" var="con">
                    <apex:column value="{!con.FirstName}"/>
                    <apex:column value="{!con.LastName}"/>
                    <apex:column value="{!con.Email}"/>
                    <apex:column value="{!con.Phone}"/>
                    </apex:pageBlockTable>
                </apex:facet>
            </apex:actionStatus>
        </apex:pageBlock>
    </apex:form>
</apex:page>