<apex:page controller="AccountClass" id="pg">
    <script>
    function validateInput(){
        var accType = document.getElementById('pg:pf:pb:pbs:type').value;
        var accStreet = document.getElementById('pg:pf:pb:pbs1:street').value;
        var accState = document.getElementById('pg:pf:pb:pbs1:state').value;
        var accCity  = document.getElementById('pg:pf:pb:pbs1:city').value;
        if(accType == 'Prospect' && (accStreet=='' ||accState == ''||accCity =='')){
           alert('Please fill Billing address');
        }else{
        callSave();
        }}
    </script>
    <apex:form id="pf">
        <apex:actionFunction name="callSave" action="{!saveAccount}"/>
    <apex:pageBlock id="pb">
        <apex:pageBlockSection id="pbs">
            <apex:inputField value="{!acc.Type}" id="type"/>
            <apex:inputField value="{!acc.Name}" />
            <apex:inputField Value="{!acc.Industry}"/>
            <apex:inputField value="{!acc.Phone}"/>
        </apex:pageBlockSection>
        <apex:pageBlockSection id="pbs1">
            <apex:inputField value="{!acc.BillingStreet}" id="street"/>
            <apex:inputField value="{!acc.BillingState}" id="state"/>
            <apex:inputField value="{!acc.BillingCity}" id="city"/>
            
        
        </apex:pageBlockSection>
        <apex:pageBlockButtons >
            <apex:commandButton value="save" onclick=" validateInput()"/>
        
        </apex:pageBlockButtons>
        </apex:pageBlock>
    </apex:form>
</apex:page>